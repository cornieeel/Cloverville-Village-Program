<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox prefHeight="416.0" prefWidth="663.0" style="-fx-background-color: #D9D9D9;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.clovervilleprogram.App.MainController">

    <!-- External stylesheet -->
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>

    <children>

        <!-- Sidebar -->
        <VBox alignment="TOP_CENTER" styleClass="sidebar">
            <children>
                <ImageView fitHeight="58.0" fitWidth="58.0" preserveRatio="true">
                    <image>
                        <Image url="@ClovervilleLogo.png" />
                    </image>
                    <VBox.margin>
                        <Insets bottom="30.0" top="17.0" />
                    </VBox.margin>
                </ImageView>

                <VBox alignment="TOP_CENTER" prefHeight="213.0" prefWidth="134.0">
                    <children>
                        <Button fx:id="showUserPage" onAction="#showUserPage" prefHeight="23.0" prefWidth="152.0" styleClass="sidebar-button-active" text="Users" />
                        <Button fx:id="showPointsPage" onAction="#showPointsPage" styleClass="sidebar-button" text="Points" />
                        <Button fx:id="showTasksPage" onAction="#showTasksPage" styleClass="sidebar-button" text="Tasks" />
                    </children>
                </VBox>
            </children>
        </VBox>
      <AnchorPane fx:id="contentPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="416.0" prefWidth="532.0" />

    </children>
</HBox>
