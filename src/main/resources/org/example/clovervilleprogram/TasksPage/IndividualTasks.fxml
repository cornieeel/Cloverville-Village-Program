<TabPane prefHeight="382.0" prefWidth="500.0" styleClass="clear-tabs" tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"  fx:controller="org.example.clovervilleprogram.IndividualTasks.TasksController">
    <stylesheets>
        <URL value="@../style.css" />
    </stylesheets>
    
      <tabs>
          <Tab styleClass="register-tab" text="Individual tasks">
              <content>
                  <AnchorPane prefHeight="351.0" prefWidth="440.0" styleClass="tab-content">
                      <children>
                          <Label layoutX="26.0" layoutY="19.0" styleClass="title-label" text="Add individual tasks" />

                          <GridPane layoutX="62.0" layoutY="82.0" prefHeight="129.0" prefWidth="309.0">
                              <columnConstraints>
                                  <ColumnConstraints halignment="RIGHT" prefWidth="93.0" />
                                  <ColumnConstraints prefWidth="216.0" />
                              </columnConstraints>
                              <rowConstraints>
                                  <RowConstraints prefHeight="35.0" />
                                  <RowConstraints prefHeight="35.0" />
                                  <RowConstraints prefHeight="35.0" />
                                  <RowConstraints prefHeight="35.0" />
                              </rowConstraints>
                              <children>
                                  <Label styleClass="form-label" text="Resident ID:">
                                      <GridPane.margin>
                                          <Insets right="10.0" />
                                      </GridPane.margin>
                        </Label>

                                  <Label styleClass="form-label" text="Activity:" GridPane.rowIndex="1">
                                      <GridPane.margin>
                                          <Insets right="10.0" />
                                      </GridPane.margin>
                        </Label>

                                  <Label styleClass="form-label" text="Points:" GridPane.rowIndex="2">
                                      <GridPane.margin>
                                          <Insets right="10.0" />
                                      </GridPane.margin>
                        </Label>
                                  <TextField fx:id="pointsPerActivity" prefHeight="29.0" prefWidth="216.0" style="-fx-border-color: transparent;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                                  <Label styleClass="form-label" text="Date of Activity:" GridPane.rowIndex="3">
                                      <GridPane.margin>
                                          <Insets right="10.0" />
                                      </GridPane.margin>
                        </Label>
                        <TextField fx:id="activity" layoutX="103.0" layoutY="11.0" prefHeight="30.0" prefWidth="216.0" style="-fx-border-color: transparent;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <DatePicker fx:id="dateOfActivity" prefHeight="30.0" prefWidth="225.0" style="-fx-background-color: transparent; -fx-border-color: white;" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <ComboBox fx:id="residentId" prefHeight="25.0" prefWidth="216.0" style="-fx-background-color: white; -fx-background-radius: 0;" GridPane.columnIndex="1" />
                              </children>
                          </GridPane>

                          <Button onAction="#handleAddActivity"  layoutX="169.0" layoutY="218.0" prefHeight="30.0" prefWidth="94.0" styleClass="button-green" text="Add activity">
                              <font>
                                  <Font size="10.0" />
                              </font>
                  </Button>
                          <Button  onAction="#handleResetFields" layoutX="265.0" layoutY="218.0" prefHeight="30.0" prefWidth="94.0" styleClass="button-gray" text="Reset fields">
                              <font>
                                  <Font size="10.0" />
                              </font>
                  </Button>
                      </children>
                  </AnchorPane>
              </content>
          </Tab>

          <!-- People Directory Tab -->
          <Tab styleClass="register-tab" text="Tasks">
              <content>
                  <AnchorPane prefHeight="325.0" prefWidth="365.0" styleClass="tab-content">
                      <children>
                          <TableView fx:id="individualTasksTable" layoutX="10.0" layoutY="54.0" prefHeight="259.0" prefWidth="481.0" style="-fx-background-color: transparent;">
                              <columns>
                                  <TableColumn fx:id="numberTable" prefWidth="98.78173828125" text="Number" />
                                  <TableColumn fx:id="fullName" minWidth="0.0" prefWidth="99.04022216796875" text="Full name" />
                                  <TableColumn fx:id="individualTask" minWidth="0.0" prefWidth="160.25509643554688" text="Individual Tasks" />
                                  <TableColumn fx:id="pointsPerActivityTable" prefWidth="121.24490356445312" text="Points per Activity" />
                              </columns>
                          </TableView>
                          <TextField layoutX="10.0" layoutY="17.0" prefHeight="28.0" prefWidth="387.0" promptText="Search..." style="-fx-border-radius: 0; -fx-border-color: #FFFFFF;">
                              <font>
                                  <Font size="12.0" />
                              </font>
                          </TextField>
                          <Button onAction="#handleExportButton" layoutX="406.0" layoutY="17.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="85.0" style="-fx-background-radius: 0; -fx-background-color: #00C130;" text="Export" textFill="WHITE">
                              <font>
                                  <Font size="12.0" />
                              </font>
                          </Button>
                          <Button onAction="#handleEditTasks" layoutX="137.0" layoutY="322.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="105.0" style="-fx-background-radius: 10; -fx-border-color: transparent; -fx-background-color: #B2B2B2;" text="Edit tasks" textFill="WHITE">
                              <font>
                                  <Font size="12.0" />
                              </font>
                          </Button>
                          <Button onAction="#handleDeleteActivity" layoutX="250.0" layoutY="322.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="105.0" style="-fx-background-radius: 10; -fx-border-color: transparent; -fx-background-color: #FF5656;" text="Delete activity" textFill="WHITE">
                              <font>
                                  <Font size="12.0" />
                              </font>
                          </Button>
                      </children>
            </AnchorPane>
              </content>
          </Tab>
      </tabs>
  </TabPane>
