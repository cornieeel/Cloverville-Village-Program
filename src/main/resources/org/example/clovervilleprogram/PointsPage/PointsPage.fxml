<!-- TabPane -->

<TabPane prefHeight="382.0" prefWidth="500.0" styleClass="clear-tabs" tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.clovervilleprogram.Points.AddPointsController">
    <stylesheets>
        <URL value="@../style.css" />
    </stylesheets>
      <tabs>
          <!-- Register User Tab -->
          <Tab styleClass="register-tab" text="Green Activities">
              <content>
                  <AnchorPane prefHeight="351.0" prefWidth="440.0" styleClass="tab-content">
                      <children>
                          <Label layoutX="26.0" layoutY="19.0" styleClass="title-label" text="Add points for a green activity" />

                          <GridPane layoutX="62.0" layoutY="82.0" prefHeight="129.0" prefWidth="309.0">
                              <columnConstraints>
                                  <ColumnConstraints halignment="RIGHT" prefWidth="93.0" />
                                  <ColumnConstraints prefWidth="216.0" />
                              </columnConstraints>
                              <rowConstraints>
                                  <RowConstraints prefHeight="35.0" />
                                  <RowConstraints prefHeight="35.0" />
                                  <RowConstraints prefHeight="35.0" />
                                  <RowConstraints prefHeight="35.0" />
                              </rowConstraints>
                              <children>
                                  <Label styleClass="form-label" text="Citizen ID:">
                                      <GridPane.margin>
                                          <Insets right="10.0" />
                                      </GridPane.margin>
                        </Label>

                                  <Label styleClass="form-label" text="Activity:" GridPane.rowIndex="1">
                                      <GridPane.margin>
                                          <Insets right="10.0" />
                                      </GridPane.margin>
                        </Label>

                                  <Label styleClass="form-label" text="Points:" GridPane.rowIndex="2">
                                      <GridPane.margin>
                                          <Insets right="10.0" />
                                      </GridPane.margin>
                        </Label>
                                  <TextField fx:id="pointsField" prefHeight="29.0" prefWidth="216.0" style="-fx-border-color: transparent;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                                  <Label styleClass="form-label" text="Date of Activity:" GridPane.rowIndex="3">
                                      <GridPane.margin>
                                          <Insets right="10.0" />
                                      </GridPane.margin>
                        </Label>
                        <ComboBox fx:id="citizenIdDropDown" prefHeight="30.0" prefWidth="216.0" style="-fx-background-color: white;" GridPane.columnIndex="1" />
                        <ComboBox fx:id="activitiesDropDown" prefHeight="30.0" prefWidth="216.0" style="-fx-background-color: white;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <DatePicker fx:id="datePoints" prefHeight="30.0" prefWidth="232.0" style="-fx-border-color: white;" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                              </children>
                          </GridPane>

                          <Button layoutX="169.0" layoutY="218.0" onAction="#handleAddPointsButton" prefHeight="30.0" prefWidth="94.0" styleClass="button-green" text="Add Points">
                              <font>
                                  <Font size="10.0" />
                              </font>
                  </Button>
                          <Button layoutX="265.0" layoutY="218.0" prefHeight="30.0" prefWidth="94.0" styleClass="button-gray" text="Reset fields">
                              <font>
                                  <Font size="10.0" />
                              </font>
                  </Button>
                      </children>
                  </AnchorPane>
              </content>
          </Tab>

          <!-- People Directory Tab -->
          <Tab styleClass="register-tab" text="Green Points">
              <content>
                  <AnchorPane prefHeight="325.0" prefWidth="365.0" styleClass="tab-content">
                      <children>
                          <TableView fx:id="pointsResidentTable" layoutX="10.0" layoutY="54.0" prefHeight="259.0" prefWidth="481.0" style="-fx-background-color: transparent;">
                              <columns>
                                  <TableColumn fx:id="numberOfActivities" prefWidth="98.78173828125" text="Number" />
                                  <TableColumn fx:id="residentIDpointsTable" minWidth="0.0" prefWidth="99.04022216796875" text="Resident ID" />
                                  <TableColumn fx:id="greenActivityResidentTable" minWidth="0.0" prefWidth="150.69668579101562" text="Green Activity" />
                                  <TableColumn fx:id="pointsPerActivityResidentTable" minWidth="0.0" prefWidth="75.5" text="Points per activity" />
                        <TableColumn fx:id="dateOfActivity" prefWidth="85.0" text="Date" />
                              </columns>
                          </TableView>
                          <TextField layoutX="10.0" layoutY="17.0" prefHeight="28.0" prefWidth="387.0" promptText="Search..." style="-fx-border-radius: 0; -fx-border-color: #FFFFFF;">
                              <font>
                                  <Font size="12.0" />
                              </font>
                          </TextField>
                          <Button layoutX="406.0" layoutY="17.0" mnemonicParsing="false" onAction="#handleExportActualPointsButton" prefHeight="26.0" prefWidth="85.0" style="-fx-background-radius: 0; -fx-background-color: #00C130;" text="Export" textFill="WHITE">
                              <font>
                                  <Font size="12.0" />
                              </font>
                          </Button>
                          <Button layoutX="137.0" layoutY="322.0" mnemonicParsing="false" onAction="#handleEditActivity" prefHeight="26.0" prefWidth="105.0" style="-fx-background-radius: 10; -fx-border-color: transparent; -fx-background-color: #B2B2B2;" text="Edit activity" textFill="WHITE">
                              <font>
                                  <Font size="12.0" />
                              </font>
                          </Button>
                          <Button layoutX="250.0" layoutY="322.0" mnemonicParsing="false" onAction="#handleDeleteResidentActivity" prefHeight="26.0" prefWidth="105.0" style="-fx-background-radius: 10; -fx-border-color: transparent; -fx-background-color: #FF5656;" text="Delete activity" textFill="WHITE">
                              <font>
                                  <Font size="12.0" />
                              </font>
                          </Button>
                      </children>
            </AnchorPane>
              </content>
          </Tab>
      <Tab styleClass="register-tab" text="Available Green Activities">
         <content>
            <AnchorPane prefHeight="325.0" prefWidth="365.0" styleClass="tab-content">
               <children>
                  <TableView fx:id="pointsTable" layoutX="10.0" layoutY="54.0" prefHeight="236.0" prefWidth="481.0" style="-fx-background-color: transparent;">
                     <columns>
                        <TableColumn fx:id="numberOfAvailableActivities" prefWidth="98.78173828125" text="Number" />
                        <TableColumn fx:id="greenActivityTable" minWidth="0.0" prefWidth="244.85470581054688" text="Green Activity:" />
                        <TableColumn fx:id="pointsPerActivityTable" prefWidth="136.145263671875" text="Points per Activity" />
                     </columns>
                  </TableView>
                  <TextField layoutX="10.0" layoutY="17.0" prefHeight="28.0" prefWidth="387.0" promptText="Search..." style="-fx-border-radius: 0; -fx-border-color: #FFFFFF;">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </TextField>
                  <Button layoutX="406.0" layoutY="17.0" mnemonicParsing="false" onAction="#handleExportButton" prefHeight="26.0" prefWidth="85.0" style="-fx-background-radius: 0; -fx-background-color: #00C130;" text="Export" textFill="WHITE">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Button>
                  <Button layoutX="112.0" layoutY="320.0" mnemonicParsing="false" onAction="#handleAddButton" prefHeight="30.0" prefWidth="130.0" style="-fx-background-radius: 10; -fx-border-color: transparent; -fx-background-color: #00C130;" text="Add Green Activity" textFill="WHITE">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Button>
                  <Button layoutX="246.0" layoutY="320.0" mnemonicParsing="false" onAction="#handleDeleteActivity" prefHeight="30.0" prefWidth="130.0" style="-fx-background-radius: 10; -fx-border-color: transparent; -fx-background-color: #FF5656;" text="Delete activity" textFill="WHITE">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Button>
               </children>
            </AnchorPane>
         </content>
      </Tab>
      </tabs>
  </TabPane>
